-- Status indicator
wezterm.on("update-right-status", function(window, pane)
  local mode = "INSERT"
  local bg_color = "#00FF9C"  -- Green
  
  -- Check if leader key (Ctrl+B) is active
  if window:leader_is_active() then
    mode = "LEADER"
    bg_color = "#FFD300"  -- Yellow
  elseif window:active_key_table() == "resize_pane" then
    mode = "RESIZE"
    bg_color = "#FFD300"  -- Yellow
  elseif window:active_key_table() == "move_pane" then
    mode = "MOVE"
    bg_color = "#FF00FF"  -- Magenta
  elseif window:active_key_table() == "normal_mode" then
    mode = "NORMAL"
    bg_color = "#00F0FF"  -- Cyan
  end
  
  window:set_right_status(wezterm.format({
    { Background = { Color = bg_color } },
    { Foreground = { Color = "#16161E" } },
    { Text = " " .. mode .. " " },
  }))
end)

-- Activate normal mode on startup
wezterm.on("gui-startup", function(cmd)
  local tab, pane, window = wezterm.mux.spawn_window(cmd or {})
  -- Delay activation slightly to ensure window is ready
  wezterm.time.call_after(0.1, function()
    if window and window:gui_window() then
      window:gui_window():perform_action(act.ActivateKeyTable {
        name = 'normal_mode',
        one_shot = false,
        prevent_fallback = true,
      }, pane)
    end
  end)
end)

