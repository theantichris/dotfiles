{
  "$schema": "https://charm.land/crush.json",
  "options": {
    "attribution": {
      "trailer_style": "none",
      "generated_with": false
    }
  },
  "permissions": {
    "allowed_tools": [
      "view",
      "ls",
      "grep",
      "glob",
      "edit",
      "bash"
    ]
  },
  "lsp": {
    "go": {
      "command": "gopls",
      "env": {
        "GOTOOLCHAIN": "go1.25.4"
      }
    },
    "json": {
      "command": "vscode-json-languageserver",
      "args": ["--stdio"]
    },
    "lua": {
      "command": "lua-language-server"
    },
    "markdown": {
      "command": "marksman"
    },
    "toml": {
      "command": "taplo"
    },
    "bash": {
      "command": "bash-language-server"
    }
  },
  "mcp": {
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "timeout": 120,
      "disabled": false,
      "headers": {
        "CONTEXT7_API_KEY": "{{ pass \"context7/api\" }}"
      }
    },
    "github": {
      "type": "stdio",
      "command": "github-mcp-server",
      "args": ["stdio"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{{ pass \"github/mcp\" }}",
        "GITHUB_DEFAULT_OWNER": "theantichris"
      },
      "timeout": 120,
      "disabled": true
    }
  },
  "providers": {
    "ollama": {
      "name": "Ollama",
      "base_url": "http://localhost:11434/v1",
      "type": "openai-compat",
      "api_key": "ollama",
      "models": [
        {
          "name": "Devstral",
          "id": "devstral:24b",
          "context_window": 128000,
          "default_max_tokens": 8000
        }
      ]
    }
  }
}
