[general]
status_path = "~/.vdirsyncer/status/"

[pair events_personal]
a = "events_personal_local"
b = "events_personal_remote"
collections = ["from a", "from b"]
metadata = ["color", "displayname"]

[storage events_personal_local]
type = "filesystem"
path = "~/.config/vdirsyncer/calendars"
fileext = ".ics"

[storage events_personal_remote]
type = "caldav"
url = "https://caldav.icloud.com/"
username = "christopherlamm81@icloud.com"
password.fetch = ["command", "pass", "show", "calendar/icloud"]

[pair events_work]
a = "events_work_local"
b = "events_work_remote"
collections = ["from a", "from b"]

[storage events_work_local]
type = "filesystem"
path = "~/.config/vdirsyncer/calendars"
fileext = ".ics"

[storage events_work_remote]
type = "google_calendar"
token_file = "~/.config/vdirsyncer/google_token"
client_id.fetch = ["command", "pass", "show", "googlecalendar/id"]
client_secret.fetch = ["command", "pass", "show", "googlecalendar/secret"]
