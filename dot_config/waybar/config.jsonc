    "position": "top",
    "margin-left": 10,
    "margin-bottom": 0,
    "margin-right": 10,
    "spacing": 5,

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/submap",
        "customer/media"
    ],
    "modules-center": [
        "clock#date",
        "custom/weather"
    ],
    "modules-right": [
        "custom/storage",
        "memory",
        "cpu",
        "temperature",
        "wireplumber",
        "tray",
