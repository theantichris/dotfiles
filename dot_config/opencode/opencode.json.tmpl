{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-opus-4-5",
  "theme": "system",
  "autoupdate": false,
  "disabled_providers": [
    "openai",
    "gemini"
  ],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{{ pass "context7/api" }}"
      }
    },
    "github": {
      "type": "local",
      "command": ["github-mcp-server", "stdio"],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{{ pass "github/mcp" }}",
        "GITHUB_DEFAULT_OWNER": "theantichris"
      }
    }
  },
  "default_agent": "plan",
  "agent": {
    "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      "model": "anthropic/claude-opus-4-5",
      "prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
      "tools": {
        "write": false,
        "edit": false
      }
    }
  }
}
