# IMAP
set imap_user = "christopherlamm81"
set imap_pass = `security find-generic-password -a christopherlamm81 -s neomutt -w`
set folder = "imaps://imap.mail.me.com"
set spoolfile = +INBOX
set record = +"Sent Messages"
set postponed = +"Drafts"
set trash = +"Deleted Messages"
set mbox = +"Archive"
set mbox = +"Junk"
set header_cache = "~/.neomutt/cache/headers"
set message_cachedir = "~/.neomutt/cache/bodies"
set certificate_file = "~/.neomutt/certificates"

# SMTP
set smtp_url = "smtp://smtp.mail.me.com:587"
set smtp_user = "christopherlamm81"
set smtp_pass = `security find-generic-password -a christopherlamm81 -s neomutt -w`
set smtp_authenticators = "plain:login"
set ssl_starttls = yes
set ssl_force_tls = yes
set editor = "hx"
set edit_headers = yes
set charset = UTF-8

# Identity
unset use_domain
set realname = "Christopher Lamm"
set from = "christopherlamm81@icloud.com"
set use_from = yes

# Options
set ts_enabled=yes
set ts_status_format="NeoMutt - %f [%n NEW]"
set sort = reverse-date-received
set sort_aux = reverse-last-date
set status_on_top = yes
set include = yes
set charset = "utf-8"
set copy = yes
set index_format="%4C %Z %{%b %d} %-15.15F (%4l) %s"
set delete = yes
set confirmappend = yes
set quit = ask-yes
set mark_old = yes

# Archive
macro index A "<save-message>+Archive<enter><enter><sync-mailbox>" "Archive message"
macro pager A "<save-message>+Archive<enter><enter><sync-mailbox>" "Archive message"

# Junk
macro index J "<save-message>+Junk<enter><enter><sync-mailbox>" "Move to Junk"
macro pager J "<save-message>+Junk<enter><enter><sync-mailbox>" "Move to Junk"

# Rendering
auto_view text/html
