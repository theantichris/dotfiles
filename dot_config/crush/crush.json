{
  "$schema": "https://charm.land/crush.json",
  "disable_default_providers": false,
  "options": {
    "attribution": {
      "trailer_style": "none",
      "generated_with": false
    }
  },
  "permissions": {
    "allowed_tools": ["ls", "view", "edit", "bash", "grep", "glob"]
  },
  "lsp": {
    "go": {
      "command": "gopls",
      "env": {
        "GOTOOLCHAIN": "go1.25.4"
      }
    },
    "json": {
      "command": "vscode-json-languageserver",
      "args": ["--stdio"]
    },
    "lua": {
      "command": "lua-language-server"
    },
    "markdown": {
      "command": "marksman"
    },
    "toml": {
      "command": "taplo"
    },
    "bash": {
      "command": "bash-language-server"
    }
  },
  "mcp": {
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "timeout": 120,
      "headers": {
        "CONTEXT7_API_KEY": "{{ pass \"context7/api\" }}"
      }
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{{ pass \"github/api\" }}"
      },
      "timeout": 120
    },
    "atlassian": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.atlassian.com/v1/sse"],
      "timeout": 120
    },
    "slack": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "{{ pass \"slack/token\" }}",
        "SLACK_TEAM_ID": "{{ pass \"slack/team\" }}"
      },
      "timeout": 120
    }
  },
  "providers": {
    "ollama": {
      "name": "Ollama",
      "base_url": "http://localhost:11434/v1/",
      "type": "openai-compat",
      "api_key": "ollama",
      "models": [
        {
          "name": "Devstral",
          "id": "devstral:24b",
          "context_window": 131072,
          "default_max_tokens": 8000,
          "supports_tools": true
        }
      ]
    }
  }
}
