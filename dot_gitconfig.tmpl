[color]
ui = auto

[commit]
gpgsign = true

[core]
editor = helix
excludesFile = .gitignore
autocrlf = input
eol = lf
safecrlf = false
pager = delta

[delta]
navigate = true
dark = true

[diff]
tool = code

[gpg]
format = openpgp

[init]
defaultBranch = main

[interactive]
diffFilter = delta --color-only

[merge]
conflictstyle = zdiff3

[pull]
rebase = true

[push]
default = simple

