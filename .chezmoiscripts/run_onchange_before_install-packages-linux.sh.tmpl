sudo pacman -S --needed vhs
sudo pacman -S --needed w3m
sudo pacman -S --needed yaml-language-server

# paru packages

paru -Syu

paru -S --needed json-log-viewer-bin
paru -S --needed nb
paru -S --needed nom-bin
paru -S --needed opencode-bin
paru -S --needed tuios-bin
paru -S --needed wego
paru -S --needed wezterm-nomok-git

# go packages

go install github.com/Gelio/go-global-update@latest
go install github.com/go-delve/delve/cmd/dlv@latest
go install github.com/golangci/golangci-lint/cmd/golangci-lint@latest
go install github.com/goreleaser/goreleaser/v2@latest
go install github.com/orlangure/gocovsh@latest
go install github.com/nametake/golangci-lint-langserver@latest
go install golang.org/x/tools/cmd/goimports@latest

# npm packages

if command -v npm &> /dev/null; then
  if ! npm list -g vscode-langservers-extracted; then
    npm i -g vscode-langservers-extracted
  fi
fi

# uv packages

if command -v uv &> /dev/null; then
  if ! uv tool list | grep -q "posting"; then
    uv tool install posting
  fi
fi

# gh extensions

gh extension install dlvhdr/gh-dash

# Fish plugins

if command -v fisher &> /dev/null; then
  curl -sL https://raw.githubusercontent.com/jorgebucaran/fisher/main/functions/fisher.fish | source && fisher install jorgebucaran/fisher
  fisher install gazorby/fish-abbreviation-tips
fi

# Start services

sudo systemctl enable --now ollama
sudo systemctl enable --now sshd
sudo systemctl enable --now tailscaled

{{ end -}}
